<UserControl x:Class="WpfExample.Views.WeatherView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:blazing="clr-namespace:Blazing.ToggleSwitch.Wpf;assembly=Blazing.ToggleSwitch.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="White">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">
            <!-- Title -->
            <TextBlock Text="Weather Information" 
                       FontSize="20" FontWeight="Bold" 
                       Foreground="#0078D7"
                       Margin="0,0,0,20"/>
            
            <!-- Location Selection Section -->
            <StackPanel Margin="0,0,0,15">
                <TextBlock Text="Select Location:" 
                           FontSize="11" 
                           Margin="0,0,0,5"/>
                <ComboBox x:Name="LocationComboBox"
                          ItemsSource="{Binding AvailableLocations}"
                          SelectedItem="{Binding SelectedLocation}"
                          Width="200" 
                          Height="30"
                          HorizontalAlignment="Left"
                          Padding="8,5"/>
            </StackPanel>

            <!-- Controls Section -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,15" VerticalAlignment="Center">
                <!-- Get Weather Button -->
                <Button Content="Get Weather" 
                        Command="{Binding GetWeatherCommand}"
                        Width="100" 
                        Height="30"
                        Padding="10,5"
                        Margin="0,0,15,0"
                        Background="#0078D7"
                        Foreground="White"
                        FontWeight="SemiBold"/>
                
                <!-- Temperature Unit Label -->
                <TextBlock Text="Temperature Unit:" 
                           FontSize="11" 
                           Margin="0,0,8,0"
                           VerticalAlignment="Center"/>
                
                <!-- Temperature Unit Toggle Switch -->
                <blazing:ToggleSwitch IsChecked="{Binding UseFahrenheit}" 
                                      Width="80" Height="30"
                                      CheckedText="F"
                                      UncheckedText="C"
                                      BorderBrush="Gray"
                                      BorderThickness="1"
                                      VerticalAlignment="Center"/>
            </StackPanel>

            <!-- Loading Indicator -->
            <ProgressBar x:Name="LoadingProgress"
                         IsIndeterminate="{Binding IsLoading}"
                         Height="3"
                         Margin="0,0,0,15"/>

            <!-- Weather Information Display -->
            <Border Background="#F5FAFF" 
                    BorderBrush="#E0E0E0" 
                    BorderThickness="1"
                    Padding="15" 
                    Margin="0,0,0,15"
                    CornerRadius="3"
                    MinHeight="150">
                <TextBlock Text="{Binding CurrentWeather}"
                           FontSize="12"
                           Foreground="#333"
                           TextWrapping="Wrap"
                           LineHeight="20"/>
            </Border>

            <!-- Info Box -->
            <Border Background="#FFFACD" 
                    Padding="10" 
                    Margin="0,20,0,0"
                    CornerRadius="3">
                <StackPanel>
                    <TextBlock Text="About This View" 
                               FontWeight="Bold" 
                               Margin="0,0,0,5"/>
                    <TextBlock TextWrapping="Wrap" FontSize="11">
                        This view demonstrates automatic ViewModel injection with async weather data retrieval. 
                        Select a location, click "Get Weather", and toggle between Celsius and Fahrenheit. 
                        The WeatherViewModel was resolved and injected by Blazing.Extensions.DependencyInjection.
                    </TextBlock>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
