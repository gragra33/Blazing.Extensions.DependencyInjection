<UserControl x:Class="WpfExample.Views.WeatherView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:converters="clr-namespace:WpfExample.Converters"
             xmlns:blazing="clr-namespace:Blazing.ToggleSwitch.Wpf;assembly=Blazing.ToggleSwitch.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <converters:TemperatureConverter x:Key="TemperatureConverter"/>
    </UserControl.Resources>
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">
            <TextBlock Text="Weather Information" 
                       FontSize="20" FontWeight="Bold" 
                       Margin="0,0,0,15"/>
            
            <GroupBox Header="Current Weather" Padding="10" Margin="0,0,0,15">
                <StackPanel>
                    <TextBlock FontSize="16" 
                               Margin="0,0,0,10"
                               TextWrapping="Wrap">
                        <TextBlock.Text>
                            <MultiBinding Converter="{StaticResource TemperatureConverter}">
                                <Binding Path="CurrentWeather"/>
                                <Binding Path="UseCelsius"/>
                            </MultiBinding>
                        </TextBlock.Text>
                    </TextBlock>
                    <StackPanel Orientation="Horizontal">
                        <Button Content="🌤️ Get Current Weather" 
                                Command="{Binding GetWeatherCommand}"
                                Width="180" HorizontalAlignment="Left"
                                Padding="10,5"
                                Margin="0,0,15,0"/>
                        
                        <!-- Temperature Unit Toggle Switch -->
                        <blazing:ToggleSwitch IsChecked="{Binding UseCelsius}" 
                                              Width="80" Height="30"
                                              CheckedText="°C"
                                              UncheckedText="°F"
                                              BorderBrush="Gray"
                                              BorderThickness="1"
                                              VerticalAlignment="Center"/>
                    </StackPanel>
                </StackPanel>
            </GroupBox>
            
            <GroupBox Header="5-Day Forecast" Padding="10">
                <StackPanel>
                    <TextBlock FontSize="14" 
                               Margin="0,0,0,10"
                               TextWrapping="Wrap">
                        <TextBlock.Text>
                            <MultiBinding Converter="{StaticResource TemperatureConverter}">
                                <Binding Path="WeatherForecast"/>
                                <Binding Path="UseCelsius"/>
                            </MultiBinding>
                        </TextBlock.Text>
                    </TextBlock>
                    <Button Content="📅 Get Forecast" 
                            Command="{Binding GetForecastCommand}"
                            Width="180" HorizontalAlignment="Left"
                            Padding="10,5"/>
                </StackPanel>
            </GroupBox>
            
            <Border Background="LightYellow" 
                    Padding="10" 
                    Margin="0,20,0,0"
                    CornerRadius="5">
                <StackPanel>
                    <TextBlock Text="💡 About This View" 
                               FontWeight="Bold" 
                               Margin="0,0,0,5"/>
                    <TextBlock TextWrapping="Wrap">
                        This view demonstrates automatic ViewModel injection and uses the custom Blazing ToggleSwitch control. The WeatherViewModel was resolved and injected by Blazing.Extensions.DependencyInjection.
                    </TextBlock>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
