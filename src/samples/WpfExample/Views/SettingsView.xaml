<UserControl x:Class="WpfExample.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">
            <TextBlock Text="Application Settings" 
                       FontSize="20" FontWeight="Bold" 
                       Margin="0,0,0,15"/>
            
            <GroupBox Header="User Preferences" Padding="10" Margin="0,0,0,15">
                <StackPanel>
                    <TextBox Text="{Binding UserName, UpdateSourceTrigger=PropertyChanged}" 
                             Margin="0,0,0,10"
                             Padding="5"/>
                    <TextBlock Text="{Binding UserNameDisplay}" 
                               FontStyle="Italic"
                               Foreground="Gray"
                               Margin="0,0,0,10"/>
                    <Button Content="ðŸ’¾ Save Settings" 
                            Command="{Binding SaveSettingsCommand}"
                            Width="150" HorizontalAlignment="Left"
                            Padding="10,5"/>
                </StackPanel>
            </GroupBox>
            
            <GroupBox Header="Application Information" Padding="10">
                <StackPanel>
                    <TextBlock Text="Dependency Injection Status:" 
                               FontWeight="Bold"
                               Margin="0,0,0,5"/>
                    <TextBlock TextWrapping="Wrap" 
                               Margin="0,0,0,10">
                        âœ… Services are configured and working!
                    </TextBlock>
                    <Button Content="â„¹ï¸ Show Service Info" 
                            Command="{Binding ShowServiceInfoCommand}"
                            Width="150" HorizontalAlignment="Left"
                            Padding="10,5"/>
                </StackPanel>
            </GroupBox>
            
            <Border Background="LightGreen" 
                    Padding="10" 
                    Margin="0,20,0,0"
                    CornerRadius="5">
                <StackPanel>
                    <TextBlock Text="ðŸ’¡ About This View" 
                               FontWeight="Bold" 
                               Margin="0,0,0,5"/>
                    <TextBlock TextWrapping="Wrap">
                        This view demonstrates a complex ViewModel with multiple injected services (IDialogService, INavigationService). All dependencies were resolved automatically by Blazing.Extensions.DependencyInjection without manual wiring!
                    </TextBlock>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>
